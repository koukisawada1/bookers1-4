<div class="container">
	<div class="row">
		<h2>フォロー一覧</h2>
		<table class="table">
			<% @user.following_user.each do |following| %>
				<tr>
					<td>
						<%= link_to user_path(following.id) do %>
							<%= attachment_image_tag(following, :profile_image, size: "100x100", fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= following.name %></td>
					<td>
						<% if following != current_user %>
							<% if current_user.following?(following) %>
								<%= link_to 'フォローを外す', unfollow_path(following.id), method: :post %>
							<% else %>
								<%= link_to 'フォローする', follow_path(following.id), method: :post %>
							<% end %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>